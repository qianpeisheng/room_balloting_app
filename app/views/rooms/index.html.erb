<% provide(:title, 'All Rooms') %>
<h1>All rooms</h1>

<ul class="rooms">
  <% @rooms.each do |room| %>
    <li>
        <%= room.block.to_s << '-' << room.name.to_s %> <%= " "<< room.sd.to_s<< " " << room.gender%>
        <%=
          if room.resident.nil?
            " available"
          else
            room.resident
          end
        %>
        <div class = "specialEffects" id="choose" onclick="myFunction()">Choose</div>
        <li><%= link_to "Choose", edit_room_path(room) %></li>
<script>
function myFunction() {
    
    window.location.replace("/room");
}
</script>
        
    </li>
  <% end %>
</ul>

